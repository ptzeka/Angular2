{
  "compilerOptions": {
    "outDir": "dist/app",
    "target": "ES5",
    "module_0": "system",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib":["es2015", "es2015.iterable","dom"],
    "outFile_0": "main.js",
    "types" : [  
      "core-js"
    ]
  },
  "filesGlob": [
    "app/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}